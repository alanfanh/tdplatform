{% extends "password_reset/base.html" %}
{% load i18n %}

{% block title %}{% trans "Password recovery" %}{% endblock %}

{% block content %}
<div class="row text-center vertical-middle-sm">
	<h2>Forgotten your password? Reset,please.</h2>
	<p>Enter your username or email to set a new password.</p>
	<form method="post" action="{{ url }}">
		{% csrf_token %}
		{{ form.as_p }}
		<p><input type="submit" value="{% trans "Recover my password" %}"></p>
	</form>
</div>
{% endblock %}